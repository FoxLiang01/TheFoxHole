<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.FoxCategoryMapper">

    <sql id="querySql">
        select <include refid="allField"/>
        from fox_category A
        <include refid="search"/>
    </sql>

    <select id="queryList" resultType="com.ruoyi.business.vo.FoxCategoryVo">
        <include refid="querySql"/>
        <if test="entity.name != null and entity.name != ''">
            and A.name like concat('%', #{entity.name}, '%')
        </if>
        <if test="entity.status != null and entity.status != ''">
            and A.status like concat('%', #{entity.status}, '%')
        </if>
        <if test="entity.metaCategory != null and entity.metaCategory != 0">
            and A.meta_category = #{entity.metaCategory}
        </if>
        <if test="entity.remark != null and entity.remark != ''">
            and A.remark like concat('%', #{entity.remark}, '%')
        </if>
        order by A.create_time desc
    </select>

    <select id="queryById" resultType="com.ruoyi.business.vo.FoxCategoryVo">
        <include refid="querySql"/>
        and A.id = #{id}
    </select>

    <sql id="allField">
        A.id,
        A.name,
        A.status,
        A.meta_category,
        A.create_by,
        A.create_time,
        A.update_by,
        A.update_time,
        A.remark
    </sql>

    <sql id="search">
        where A.delete_status = 1
    </sql>
</mapper>
