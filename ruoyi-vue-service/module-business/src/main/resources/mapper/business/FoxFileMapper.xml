<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.FoxFileMapper">

    <sql id="querySql">
        select <include refid="allField"/>
        from fox_file A
        <include refid="search"/>
    </sql>

    <select id="queryList" resultType="com.ruoyi.business.vo.FoxFileVo">
        <include refid="querySql"/>
        <if test="entity.remark != null and entity.remark != ''">
            and A.remark like concat('%', #{entity.remark}, '%')
        </if>
        <if test="entity.file != null and entity.file != ''">
            and A.file like concat('%', #{entity.file}, '%')
        </if>
        order by A.create_time desc
    </select>

    <select id="queryById" resultType="com.ruoyi.business.vo.FoxFileVo">
        <include refid="querySql"/>
        and A.id = #{id}
    </select>

    <sql id="allField">
        A.id,
        A.create_by,
        A.create_time,
        A.update_by,
        A.update_time,
        A.remark,
        A.file
    </sql>

    <sql id="search">
        where A.delete_status = 1
    </sql>
</mapper>
