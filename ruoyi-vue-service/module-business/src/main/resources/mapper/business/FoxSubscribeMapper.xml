<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.FoxSubscribeMapper">

    <sql id="querySql">
        select <include refid="allField"/>
        from fox_subscribe A
        <include refid="search"/>
    </sql>

    <select id="queryList" resultType="com.ruoyi.business.vo.FoxSubscribeVo">
        <include refid="querySql"/>
        <if test="entity.subscriber != null and entity.subscriber != ''">
            and A.subscriber like concat('%', #{entity.subscriber}, '%')
        </if>
        <if test="entity.email != null and entity.email != ''">
            and A.email like concat('%', #{entity.email}, '%')
        </if>
        <if test="entity.workId != null and entity.workId != 0">
            and A.work_id = #{entity.workId}
        </if>
        order by A.create_time desc
    </select>

    <select id="queryById" resultType="com.ruoyi.business.vo.FoxSubscribeVo">
        <include refid="querySql"/>
        and A.id = #{id}
    </select>

    <sql id="allField">
        A.id,
        A.subscriber,
        A.email,
        A.create_time,
        A.update_time,
        A.work_id,
        A.del_flag
    </sql>

    <sql id="search">
        where A.delete_status = 1
    </sql>
</mapper>
