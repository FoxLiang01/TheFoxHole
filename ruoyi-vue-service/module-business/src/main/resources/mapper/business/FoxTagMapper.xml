<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.FoxTagMapper">

    <sql id="querySql">
        select <include refid="allField"/>
        from fox_tag A
        <include refid="search"/>
    </sql>

    <select id="queryList" resultType="com.ruoyi.business.vo.FoxTagVo">
        <include refid="querySql"/>
        <if test="entity.tagName != null and entity.tagName != ''">
            and A.tag_name like concat('%', #{entity.tagName}, '%')
        </if>
        <if test="entity.metaTag != null and entity.metaTag != 0">
            and A.meta_tag = #{entity.metaTag}
        </if>
        <if test="entity.remark != null and entity.remark != ''">
            and A.remark like concat('%', #{entity.remark}, '%')
        </if>
        <if test="entity.status != null and entity.status != ''">
            and A.status like concat('%', #{entity.status}, '%')
        </if>
        order by A.create_time desc
    </select>

    <select id="queryById" resultType="com.ruoyi.business.vo.FoxTagVo">
        <include refid="querySql"/>
        and A.id = #{id}
    </select>

    <sql id="allField">
        A.id,
        A.tag_name,
        A.meta_tag,
        A.create_by,
        A.create_time,
        A.update_by,
        A.update_time,
        A.remark,
        A.status,
        A.del_flag
    </sql>

    <sql id="search">
        where A.delete_status = 1
    </sql>
</mapper>
