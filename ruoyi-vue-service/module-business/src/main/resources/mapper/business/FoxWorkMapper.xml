<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.FoxWorkMapper">

    <sql id="querySql">
        select <include refid="allField"/>
        from fox_work A
        <include refid="search"/>
    </sql>

    <select id="queryList" resultType="com.ruoyi.business.vo.FoxWorkVo">
        <include refid="querySql"/>
        <if test="entity.workTitle != null and entity.workTitle != ''">
            and A.work_title like concat('%', #{entity.workTitle}, '%')
        </if>
        <if test="entity.remark != null and entity.remark != ''">
            and A.remark like concat('%', #{entity.remark}, '%')
        </if>
        <if test="entity.categoryId != null and entity.categoryId != 0">
            and A.category_id = #{entity.categoryId}
        </if>
        order by A.create_time desc
    </select>

    <select id="queryById" resultType="com.ruoyi.business.vo.FoxWorkVo">
        <include refid="querySql"/>
        and A.id = #{id}
    </select>

    <sql id="allField">
        A.id,
        A.work_title,
        A.remark,
        A.create_by,
        A.create_time,
        A.update_by,
        A.update_time,
        A.category_id
    </sql>

    <sql id="search">
        where A.delete_status = 1
    </sql>
</mapper>
